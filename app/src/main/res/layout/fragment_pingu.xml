<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pingu">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".penguin">

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginBottom="384dp"
                android:background="#FF5722"
                android:backgroundTint="#F36215"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/penguinSeal"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="#6A7073"
                android:text="Seal"
                android:layout_margin="2dp"
                android:textColor="@color/teal_200"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/penguinBear"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.052" />

            <Button
                android:id="@+id/penguinOtter"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="#573A25"
                android:text="Otter"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/otterPenguin"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.054" />

            <Button
                android:id="@+id/penguinBear"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:text="bear"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/penguinSeal"
                app:layout_constraintHorizontal_bias="0.029"
                app:layout_constraintStart_toEndOf="@+id/Penguin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.055" />

            <Button
                android:id="@+id/Penguin"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/gray"
                android:text="Penguin"
                android:textColor="@color/gold"
                android:textSize="13dp"
                android:textStyle="bold"
                app:iconTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.337"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.054" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="157dp"
                android:layout_height="247dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.937"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/penguins" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="201dp"
                android:layout_height="354dp"
                android:layout_marginStart="62dp"
                android:layout_marginEnd="93dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Penguins are fascinating flightless birds primarily found in the Southern Hemisphere, with many living in Antarctica. Adapted for life in the water, they have flippers instead of wings, making them excellent swimmers. Their distinctive black and white coloration provides camouflage while swimming, helping them avoid predators.  Penguins vary in size, from the small Little Blue Penguin, about 33 cm tall, to the large Emperor Penguin, which can reach up to 120 cm. While some, like the Emperor and Adélie penguins, inhabit the icy regions of Antarctica, others, such as the Galápagos Penguin, live in warmer climates closer to the equator."
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.389"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintVertical_bias="0.405" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>